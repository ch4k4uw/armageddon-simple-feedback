{
  "name": "armageddon-simple-feedback",
  "version": "1.0.0",
  "description": "Feedback backend app for non complex usages.",
  "main": "index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "transform": {
      ".(ts|tsx)": [
        "ts-jest",
        {
          "compiler": "ttypescript"
        }
      ]
    },
    "testRegex": "(/__tests__/.*|\\.(test))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ]
  },
  "author": "Pedro Motta",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.10",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^4.0.0"
  }
}
