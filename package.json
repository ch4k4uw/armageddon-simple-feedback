{
   "name": "armageddon-simple-feedback",
   "version": "1.0.0",
   "description": "Feedback backend app for non complex usages.",
   "main": "index.js",
   "scripts": {
      "test": "jest",
      "migration:generate": "typeorm-ts-node-esm -d ./src/data-source.ts migration:generate ./src/infra/database/orm/migrations/default",
      "migration:run": "typeorm-ts-node-esm -d ./src/data-source.ts migration:run",
      "seed": "ts-node ./node_modules/typeorm-extension/dist/cli/index.js seed -d ./src/data-source.ts",
      "db:open": "sqlite3 data/db.sqlite",
      "serv:dev": "nodemon src/index.ts"
   },
   "jest": {
      "setupFilesAfterEnv": [
         "<rootDir>/setup-jest.ts"
      ],
      "transform": {
         ".(ts|tsx)": [
            "ts-jest",
            {
               "compiler": "ttypescript",
               "useESM": true
            }
         ]
      },
      "testRegex": "(/__tests__/.*|\\.(test))\\.(ts|tsx|js)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "json"
      ],
      "verbose": true,
      "collectCoverageFrom": [
         "src/**/*.{ts,tsx,js,jsx}",
         "!src/**/*.d.ts"
      ]
   },
   "author": "Pedro Motta",
   "license": "ISC",
   "devDependencies": {
      "@types/express": "^4.17.15",
      "@types/jest": "^29.2.4",
      "@types/jsonwebtoken": "^8.5.9",
      "@types/node": "^16.11.10",
      "@types/uuid": "^9.0.0",
      "nodemon": "^2.0.20",
      "ts-jest": "^29.0.3",
      "ts-mockito": "^2.6.1",
      "ts-node": "^10.9.1",
      "ttypescript": "^1.5.13",
      "typescript": "4.5.2"
   },
   "dependencies": {
      "dotenv": "^16.0.3",
      "express": "^4.18.2",
      "joi": "^17.7.0",
      "jsonwebtoken": "^9.0.0",
      "nanoid": "^3.3.4",
      "path": "^0.12.7",
      "reflect-metadata": "^0.1.13",
      "sqlite3": "^5.1.4",
      "typedi": "^0.10.0",
      "typeorm": "0.3.11",
      "typeorm-extension": "^2.4.0",
      "uuid": "^9.0.0"
   }
}
